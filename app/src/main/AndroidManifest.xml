<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.informatika.mobilecomponentImtinan">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="mobilecomponentslabnadia "
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.Mobilecomponentslabnadia">

        <activity
            android:name="com.informatika.mobilecomponentImtinan.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.informatika.mobilecomponentImtinan.sharedprefs.SharedPrefsActivity"
            android:exported="false" />

        <activity
            android:name="com.informatika.mobilecomponentImtinan.recyclerview.RecyclerViewActivity"
            android:exported="false" />

        <activity
            android:name="com.informatika.mobilecomponentImtinan.roomdb.RoomActivity"
            android:exported="false" />

        <activity
            android:name="com.informatika.mobilecomponentImtinan.alarm.AlarmActivity"
            android:exported="false" />

        <receiver
            android:name="com.informatika.mobilecomponentImtinan.alarm.AlarmReceiver"
            android:exported="false" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false">
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>